<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prabowo.tutorpedia.PointActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/tpstore" />


        <TextView

            android:id="@+id/TVhargatpoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="1500 TPoin "
            android:textColor="#000000"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/IVhadiahpoint"
            android:layout_width="200dp"
            android:layout_height="200dp"
             />

        <TextView
            android:id="@+id/TVpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="TPoin anda : " />


        <TextView
            android:id="@+id/TVpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:text="point"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BTtukarpoint"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#6666cc"
            android:text="Tukar TPoin"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVkodehadiahinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVkodehadiahuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVkodehadiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVkodehadiahinfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
